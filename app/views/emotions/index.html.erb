<p id="notice"><%= notice %></p>

<h1>Emotions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Studying now</th>
      <th>Situation</th>
      <th>Phrase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emotions.each do |emotion| %>
      <tr>
        <td><%= emotion.name %></td>
        <td><%= emotion.studying_now %></td>
        <td><%= emotion.situation_id %></td>
        <td><%= emotion.phrase_id %></td>
        <td><%= link_to 'Show', emotion %></td>
        <td><%= link_to 'Edit', edit_emotion_path(emotion) %></td>
        <td><%= link_to 'Destroy', emotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Emotion', new_emotion_path %>
