<p id="notice"><%= notice %></p>

<center><h1>SITUATIONS</h1></center>
<% if @situations.all.count > 0 %>
<center><table>
  <thead>
    <tr>
      <th>STUDY</th>
      <th>  </th>
      <th>YOUR SITUATIONS</th>
      <th colspan="3"><center>ACTIONS</center></th>
    </tr>
  </thead>

  <tbody>
    <% @situations.each do |situation| %>
      <tr>
        <td><center><%= check_box_tag 'activated[]', situation.studying_now %><center></td>
        <td>  </td>
        <td><%= situation.name %></td>
        <td><center><%= link_to 'EDIT', edit_situation_path(situation) %></center></td>
        <td><center><%= link_to 'DELETE', situation, method: :delete, data: { confirm: 'Are you sure?' } %></center></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>

<br>
<center>
<%= link_to 'Create a New Situation', new_situation_path %>
</center>

<% else %>
<center>
<%= link_to 'Create a New Situation', new_situation_path %>
</center>
<% end %>
