<p id="notice"><%= notice %></p>

<center><h1>SITUATIONS</h1></center>

<table>
  <thead>
    <tr>
      <th>STUDY</th>
      <th>  </th>
      <th><center>Situation Name</center></th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @situations.each do |situation| %>
      <tr>
        <td><center><%= check_box_tag 'activated[]', situation.studying_now %><center></td>
        <td>  </td>
        <td><%= situation.name %></td>
        <td><%= link_to 'Edit', edit_situation_path(situation) %></td>
        <td><%= link_to 'Destroy', situation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<center>
<%= link_to 'Create a New Situation', new_situation_path %>
</center>
